<!doctype html>

<html class="no-js" lang="gl">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{{ titulo }} - DAG</title>

        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="author" content="DAG - Asociaci칩n Galega de Dese침o">

        <link rel="stylesheet" href="./styles.css">
    </head>

    <body>
        <!-- HEADER -->
        <nav class="page-header wrapper" id="main-header">
            <a href="https://dag.gal" class="page-logo" title="Asociaci칩n Galega de Dese침o">
                <img src="/img/dag.svg" inline>
            </a>
        </nav>
        <!-- /HEADER -->

        <article class="project wrapper">
          <header>
            <h1>{{ titulo }}</h1>
            {{ subtitulo | md | safe }}
          </header>

          <ul>
            {% for evento in programa %}
            <li>
              <time>{{ evento.hora }}</time>
              <div>
                {{ evento.info | md | safe }}
              </div>
            </li>
            {% endfor %}
          </ul>

          <div>
            {{ info | md | safe }}
          </div>
        </article>

        <aside class="project-news-external wrapper">
          <ul>
            {% for item in social %}
            <li>
              <a href="{{ item.url }}">
                <h3>{{ item.title }}</h3>
                <small>{{ item.medio }}</small>
              </a>
            </li>
            {% endfor %}
          </ul>
        </aside>
    </body>
</html>
